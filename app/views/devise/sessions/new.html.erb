<div class="mx-auto">
  <%= form_with(scope: :user, url: session_path(resource_name)) do |f| %>
    <fieldset class="fieldset bg-base-200 border-base-300 rounded-box w-xs border p-4">
      <legend class="fieldset-legend">Sign In</legend>

      <%= f.label :username, class: "label" %>
      <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "input validator" %>

      <%= f.label :password, class: "label mt-3" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "input validator" %>

      <%= f.submit "Sign in", class: "btn btn-primary text-white mt-4" %>
    </fieldset>
  <% end %>

  <div class="mt-3">
    <%= render "devise/shared/links" %>
  </div>
</div>
