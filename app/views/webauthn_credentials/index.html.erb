<div class="card w-96 bg-base-100 shadow-xl">
  <div class="card-body">
    <div class="card-actions justify-between items-center mb-4">
      <h2 class="card-title">Passkeys</h2>
      <%= button_to "Add passkey", new_user_passkey_path, method: :get, class: "btn btn-transparent" %>
    </div>
    <% if @passkeys.any? %>
      <ul class="list bg-base-100 shadow-xs">
        <% @passkeys.each do |passkey| %>
          <li class="list-row">
            <div class="space-y-1">
              <p><%= passkey.name %></p>
              <div class="text-xs font-semibold opacity-60">Created on <%= passkey.created_at.strftime("%B %d, %Y") %></div>
            </div>
            <%= button_to user_passkey_path(passkey), method: :delete, form: { class: "btn btn-square btn-ghost ml-auto" } do %>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-[1.2em]">
                <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
              </svg>
            <% end %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p>No passkeys registered.</p>
    <% end %>
  </div>
</div>

